#⚠️ Important  
# The `.env` file is declarative only.
# Conditional logic (e.g. database selection) is handled by the backend
# at runtime (or via a Docker entrypoint script), not by Docker Compose.

# =========================
# APP
# =========================
# Runtime environment
# Possible values: development | production | test
NODE_ENV=development

# Application name (used for logs, monitoring, etc.)
APP_NAME=realtime-social-platform


# =========================
# API
# =========================
# Port exposed by the backend API (inside Docker and/or locally)
API_PORT=4000

# Public API URL used by frontends and external tools
API_URL=http://localhost:4000


# =========================
# FRONT (Vite / Vue / React / Astro)
# =========================
# API endpoint injected at build/runtime for Vite-based frontends
# ⚠️ Must start with VITE_
VITE_API_URL=http://localhost:4000


# =========================
# AUTH
# =========================
# Secret key used to sign JWT tokens
# ⚠️ MUST be changed in production
JWT_SECRET=change_me

# JWT expiration duration
# Examples: 1h | 24h | 7d
JWT_EXPIRES_IN=7d


# =========================
# DATABASE TYPE (switch)
# =========================
# Select which database engine the backend should use
# Possible values: postgresql | mysql
DB_TYPE=mysql
# DB_TYPE=postgresql


# =========================
# POSTGRES CONFIG
# =========================
# PostgreSQL service hostname (Docker service name)
POSTGRES_HOST=db-postgres

# PostgreSQL port
POSTGRES_PORT=5432

# PostgreSQL database name
POSTGRES_DB=app

# PostgreSQL credentials
POSTGRES_USER=app
POSTGRES_PASSWORD=app


# =========================
# MYSQL CONFIG
# =========================
# MySQL service hostname (Docker service name)
MYSQL_HOST=db-mysql

# MySQL port
MYSQL_PORT=3306

# MySQL database name
MYSQL_DB=app

# MySQL credentials
MYSQL_USER=app
MYSQL_PASSWORD=app

# MySQL root password (required by MySQL Docker image)
MYSQL_ROOT_PASSWORD=root
